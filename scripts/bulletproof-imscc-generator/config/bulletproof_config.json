{
  "bulletproof_config": {
    "version": "2.0.0",
    "pattern7_prevention": {
      "zero_tolerance": true,
      "immediate_termination": true,
      "pre_flight_validation": true,
      "atomic_operations": true,
      "emergency_cleanup": true
    },
    "validation_rules": {
      "max_files_allowed": 1,
      "allow_directories": false,
      "allow_numbered_variants": false,
      "require_valid_zip": true,
      "check_manifest_presence": true
    },
    "file_operations": {
      "use_atomic_rename": true,
      "create_temporary_files": true,
      "compression_level": 6,
      "validate_immediately": true
    },
    "pattern_detection": {
      "base_directory_patterns": [
        "{stem}",
        "{stem}/"
      ],
      "numbered_variant_patterns": [
        "{stem} (*)",
        "{stem}_*",
        "{stem}(*)"
      ],
      "target_file_patterns": [
        "{name}*"
      ]
    },
    "execution_controls": {
      "single_execution_only": true,
      "no_retry_logic": true,
      "fail_fast": true,
      "track_created_paths": true
    }
  }
}