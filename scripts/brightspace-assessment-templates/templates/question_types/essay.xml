<!--
    QTI Essay Question Template
    cc_profile: cc.essay.v0p1

    Long-form written response question that requires manual grading.
    Uses response_str with render_fib.
    Key metadata: qmd_computerscored = No (requires instructor grading)

    Placeholders:
    - {ITEM_ID}: Unique item identifier
    - {POINTS}: Question point value (cc_weighting)
    - {QUESTION_TEXT}: HTML-escaped question/prompt text
    - {RESPONSE_ID}: Unique response identifier
    - {ANSWER_LABEL_ID}: Unique answer label identifier
    - {FEEDBACK}: General feedback text (HTML-escaped, shown after submission)
    - {SOLUTION}: Model answer or rubric information (HTML-escaped, optional)
-->
      <item ident="{ITEM_ID}">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>cc_profile</fieldlabel>
              <fieldentry>cc.essay.v0p1</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>qmd_computerscored</fieldlabel>
              <fieldentry>No</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>cc_weighting</fieldlabel>
              <fieldentry>{POINTS}</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">{QUESTION_TEXT}</mattext>
          </material>
          <response_str ident="{RESPONSE_ID}">
            <render_fib>
              <response_label ident="{ANSWER_LABEL_ID}"/>
            </render_fib>
          </response_str>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar minvalue="0" maxvalue="100" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition>
            <conditionvar>
              <other/>
            </conditionvar>
            <displayfeedback feedbacktype="Response" linkrefid="general_fb"/>
            <displayfeedback feedbacktype="Solution" linkrefid="solution"/>
          </respcondition>
        </resprocessing>
        <itemfeedback ident="solution">
          <solution>
            <solutionmaterial>
              <flow_mat>
                <material>
                  <mattext texttype="text/html">{SOLUTION}</mattext>
                </material>
              </flow_mat>
            </solutionmaterial>
          </solution>
        </itemfeedback>
        <itemfeedback ident="general_fb">
          <flow_mat>
            <material>
              <mattext texttype="text/html">{FEEDBACK}</mattext>
            </material>
          </flow_mat>
        </itemfeedback>
      </item>
