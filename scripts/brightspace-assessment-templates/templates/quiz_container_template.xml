<?xml version="1.0" encoding="utf-8"?>
<!--
    IMSCC QTI Assessment Container Template

    Resource Type: imsqti_xmlv1p2/imscc_xmlv1p3/assessment
    Namespace: http://www.imsglobal.org/xsd/ims_qtiasiv1p2

    This is the outer wrapper for QTI assessments. Question items
    go inside the <section> element.

    Assessment Profiles (cc_profile values):
    - cc.exam.v0p1: Examination
    - cc.quiz.v0p1: Quiz
    - cc.survey.v0p1: Survey
    - cc.graded_survey.v0p1: Graded Survey

    Placeholders:
    - {ASSESSMENT_ID}: Unique identifier (format: i + 32-char UUID hex)
    - {TITLE}: Assessment title
    - {CC_PROFILE}: Assessment profile (cc.exam.v0p1, cc.quiz.v0p1, etc.)
    - {ASSESSMENT_TYPE}: Type (Examination, Assessment, Quiz, Survey)
    - {MAX_ATTEMPTS}: Maximum attempts allowed (integer, 0 = unlimited)
    - {TIME_LIMIT}: Time limit in seconds (0 = no limit)
    - {SECTION_ID}: Unique section identifier
    - {QUESTION_ITEMS}: Question item XML elements
-->
<questestinterop xmlns="http://www.imsglobal.org/xsd/ims_qtiasiv1p2"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.imsglobal.org/xsd/ims_qtiasiv1p2 http://www.imsglobal.org/profile/cc/ccv1p3/ccv1p3_qtiasiv1p2p1_v1p0.xsd">
  <assessment ident="{ASSESSMENT_ID}" title="{TITLE}">
    <qtimetadata>
      <qtimetadatafield>
        <fieldlabel>cc_profile</fieldlabel>
        <fieldentry>{CC_PROFILE}</fieldentry>
      </qtimetadatafield>
      <qtimetadatafield>
        <fieldlabel>qmd_assessmenttype</fieldlabel>
        <fieldentry>{ASSESSMENT_TYPE}</fieldentry>
      </qtimetadatafield>
      <qtimetadatafield>
        <fieldlabel>cc_maxattempts</fieldlabel>
        <fieldentry>{MAX_ATTEMPTS}</fieldentry>
      </qtimetadatafield>
      <qtimetadatafield>
        <fieldlabel>qmd_timelimit</fieldlabel>
        <fieldentry>{TIME_LIMIT}</fieldentry>
      </qtimetadatafield>
    </qtimetadata>
    <section ident="{SECTION_ID}">
{QUESTION_ITEMS}
    </section>
  </assessment>
</questestinterop>
