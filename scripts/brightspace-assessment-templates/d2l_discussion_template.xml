<?xml version="1.0" encoding="UTF-8"?>
<discussion xmlns="http://www.imsglobal.org/xsd/imsccv1p1/d2l_2p0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.imsglobal.org/xsd/imsccv1p1/d2l_2p0 http://www.imsglobal.org/xsd/imsccv1p1/d2l_2p0.xsd">
  <title>{DISCUSSION_TITLE}</title>
  <description>
    <text texttype="text/html">{DISCUSSION_DESCRIPTION}</text>
  </description>
  <prompt>
    <text texttype="text/html">{DISCUSSION_PROMPT}</text>
  </prompt>
  <gradebook_item>
    <points_possible>{POINTS_POSSIBLE}</points_possible>
    <weight>{WEIGHT}</weight>
    <category_name>Discussions</category_name>
    <due_date>{DUE_DATE}</due_date>
  </gradebook_item>
  <forum_settings>
    <allow_anonymous>false</allow_anonymous>
    <require_post_first>true</require_post_first>
    <enable_moderation>false</enable_moderation>
    <display_posts_from_all_groups>false</display_posts_from_all_groups>
    <enable_rating>false</enable_rating>
  </forum_settings>
  <participation_requirements>
    <initial_post_required>true</initial_post_required>
    <initial_post_due_date>{INITIAL_POST_DUE}</initial_post_due_date>
    <replies_required>2</replies_required>
    <minimum_post_length>100</minimum_post_length>
  </participation_requirements>
  <availability_conditions>
    <available_from>{START_DATE}</available_from>
    <available_until>{END_DATE}</available_until>
    <visible_before_start_date>true</visible_before_start_date>
  </availability_conditions>
  <grading_rubric>
    <rubric_type>holistic</rubric_type>
    <criteria>
      <criterion id="initial_post" points="15">
        <title>Initial Post Quality</title>
        <description>Thoughtful response demonstrating understanding of concepts</description>
      </criterion>
      <criterion id="peer_interaction" points="10">
        <title>Peer Interaction</title>
        <description>Meaningful responses to at least two classmates</description>
      </criterion>
    </criteria>
  </grading_rubric>
</discussion>