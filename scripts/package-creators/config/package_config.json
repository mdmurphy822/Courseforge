{
  "imscc_settings": {
    "version": "1.2.0",
    "namespace": "http://www.imsglobal.org/xsd/imsccv1p2/imscp_v1p1",
    "compression": "ZIP_DEFLATED",
    "compression_level": 6
  },
  "content_validation": {
    "require_manifest": true,
    "validate_html": true,
    "validate_xml": true,
    "minimum_content_files": 1,
    "maximum_package_size_mb": 500
  },
  "brightspace_compatibility": {
    "native_tools_enabled": true,
    "qti_version": "1.2",
    "d2l_extensions": true,
    "gradebook_integration": true
  },
  "accessibility": {
    "wcag_compliance": "2.1_AA",
    "validate_alt_text": true,
    "keyboard_navigation": true,
    "screen_reader_support": true
  },
  "output_settings": {
    "default_export_path": "/exports/",
    "timestamp_format": "YYYYMMDD_HHMMSS",
    "package_naming": "{course_name}_{timestamp}.imscc",
    "validate_output": true
  },
  "error_handling": {
    "fail_fast": true,
    "detailed_logging": true,
    "validation_errors_fatal": true,
    "cleanup_on_failure": true
  }
}