{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://slideforge.dev/schemas/theme.json",
  "title": "Slideforge Theme Schema",
  "description": "Schema for PowerPoint theme configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Theme display name"
    },
    "description": {
      "type": "string",
      "description": "Theme description"
    },
    "aspect_ratio": {
      "type": "string",
      "enum": ["16:9", "4:3", "16:10"],
      "default": "16:9",
      "description": "Slide aspect ratio"
    },
    "colors": {
      "type": "object",
      "description": "Color palette",
      "properties": {
        "primary": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Primary brand color"
        },
        "secondary": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Secondary accent color"
        },
        "accent": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Highlight/accent color"
        },
        "background": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Default background color"
        },
        "text_primary": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Primary text color"
        },
        "text_secondary": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Secondary/muted text color"
        },
        "success": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Success/positive color"
        },
        "warning": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Warning/caution color"
        },
        "error": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Error/danger color"
        }
      },
      "required": ["primary", "background", "text_primary"]
    },
    "fonts": {
      "type": "object",
      "description": "Font configuration",
      "properties": {
        "heading": {
          "type": "object",
          "properties": {
            "family": { "type": "string", "default": "Arial" },
            "weight": { "type": "string", "enum": ["normal", "bold"], "default": "bold" }
          }
        },
        "body": {
          "type": "object",
          "properties": {
            "family": { "type": "string", "default": "Arial" },
            "weight": { "type": "string", "enum": ["normal", "bold"], "default": "normal" }
          }
        }
      }
    },
    "sizes": {
      "type": "object",
      "description": "Font sizes in points",
      "properties": {
        "title": { "type": "integer", "default": 44, "minimum": 24, "maximum": 72 },
        "subtitle": { "type": "integer", "default": 32, "minimum": 18, "maximum": 48 },
        "section_header": { "type": "integer", "default": 40, "minimum": 24, "maximum": 60 },
        "slide_title": { "type": "integer", "default": 32, "minimum": 20, "maximum": 48 },
        "body": { "type": "integer", "default": 24, "minimum": 14, "maximum": 32 },
        "caption": { "type": "integer", "default": 18, "minimum": 12, "maximum": 24 }
      }
    },
    "spacing": {
      "type": "object",
      "description": "Layout spacing in inches",
      "properties": {
        "margin_top": { "type": "number", "default": 0.5 },
        "margin_bottom": { "type": "number", "default": 0.5 },
        "margin_left": { "type": "number", "default": 0.5 },
        "margin_right": { "type": "number", "default": 0.5 },
        "content_gap": { "type": "number", "default": 0.25 }
      }
    },
    "template_path": {
      "type": "string",
      "description": "Path to base PPTX template file"
    }
  },
  "required": ["name", "colors"]
}
